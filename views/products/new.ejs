<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<div class="container my-2">
  <h1>Pet Top Store - Cadastrar</h1>
  <a href="/">Voltar</a>
</div>

<div class="container mx-auto p-2">
  <div class="container my-3 py-5" style="width: 50%;">
    <form class="row g-3" method="POST" action="/products/create" enctype="multipart/form-data">

      <div class="row mb-3">
        <label for="inputnome" class="form-label">NOME DO PRODUTO</label>
        <input type="text" class="form-control" id="inputnome" name="name">
      </div>

      <div class="row mb-3">
        <label for="inputpreco" class="form-label">PREÇO UNITÁRIO</label>
        <input type="text" class="form-control" id="inputpreco" name="price">
      </div>

      <div class="row mb-3">
        <label for="inputselect" class="form-label">CATEGORIA</label>
        <select id="inputselect" name="category_id" class="form-select">
          <option selected>Selecione...</option>
          <% for (const category of categories) { %>
          <option value="<%= category.id %>">
            <%= category.name %>
          </option>
          <% } %>
        </select><br />
      </div>

      <div class="row mb-3">
        <label for="inputfoto" class="form-label">FOTO</label>
        <input type="file" class="form-control" id="inputfoto" name="photo">
      </div>


      <div class="row mb-3 d-grid gap-3">
        <button type="submit" class="btn btn-primary">CADASTRAR PRODUTO</button>
        <button class="btn btn-danger" type="reset">LIMPAR</button>
      </div>

    </form>
  </div>
</div>