<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<!-- CDN dos ícones do Bootstap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">


<div class="container my-2">
  <h1>Pet Top Store - Lista de produtos</h1>
  <a href="/">Voltar</a>
  <!-- <a href="/products/new">Adicionar produto</a> -->
</div>


<div class="container mx-auto p-2">
  <div class="container my-3 py-5" style="width: 100%;">
    <div class="col md-12 mb-3">
      <a href="/products/new" class="btn btn-primary">Add <i class="bi bi-floppy"></i></a>
      <!-- <button type="submit" class="btn btn-primary">Add <i class="bi bi-floppy"></i></button> -->
    </div>

    <table id="datatable" class="table table-striped table-hover table-bordered display">
      <thead class="table-light">
        <tr>
          <th scope="col" class="text-center">FOTO</th>
          <th scope="col" class="text-center">NOME DO PRODUTO</th>
          <th scope="col" class="text-center">DESCRIÇÃO</th>
          <th scope="col" class="text-center">CATEGORIA</th>
          <th scope="col" class="text-center">UNIDADE (R$)</th>
          <th scope="col" class="text-center">AÇÕES</th>
        </tr>
      </thead>
      <tbody>
        <% for (const product of products) { %>


        <tr>
          <td scope="col" class="text-center"><img src="/images/<%= product.photo %>" width="50px" /></td>
          <td>
            <%= product.name %>
          </td>
          <td>
            <%= product.description %>
          </td>
          <td>
            <%= product.category?.name %>
          </td>
          <td scope="col" class="text-center">
            <%= product.price %>
          </td>
          <td class="text-center">
            <a href="#" class="link-success pe-2"><i class="bi bi-eye" title="Read"></i></a>
            <a href="#" class="link-primary pe-2"><i class="bi bi-pencil-square" title="Edit"></i></a>
            <a href="#" class="link-danger"><i class="bi bi-trash3" title="Delete"></i></a>
          </td>
        </tr>
        <% } %>
      </tbody>


    </table>
  </div>

</div>

