<h1>Lista de produtos</h1>
<table>
    <% for (const product of products) { %>
        <tr>
            <td><img src="/images/<%= product.photo %>" width="100px" /></td>
            <td>
                <%= product.name %>
            </td>
            <td>
                <%= product.price %>
            </td>
            <td>
                <%= product.category?.name %>
            </td>
        </tr>
        <% } %>
</table>
<a href="/">Voltar</a>
<a href="/products/new">Adicionar produto</a>