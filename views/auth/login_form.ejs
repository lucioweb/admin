<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container my-2">
  <h1>Pet Top Store - Login</h1>
</div>


<div class="container mx-auto p-2">

  <div class="container my-3 py-5" style="width: 50%;">

    <form class="row g-3" method="POST" action="/auth/sign_in">
      <div class="row mb-3">
        <label for="inputEmail4" class="form-label">EMAIL</label>
        <input type="email" class="form-control" id="inputEmail4" name="email">
      </div>

      <div class="row mb-3">
        <label for="inputPassword4" class="form-label">SENHA</label>
        <input type="password" class="form-control" id="inputPassword4" name="password"">
    </div>

    <div class=" row mb-3">
        <button type="submit" class="btn btn-primary" value="Entrar">ENTRAR <i class="bi bi-box-arrow-in-right"></i></button>
      </div>

      <div class="container">
        <% if (error) { %>

        <div style="color: red">
          <p>
            Acesso ao painel de administração apenas para usuários autorizados. Verifique suas credenciais.
          </p>
        </div>

        <% } %>
      </div>
    </form>
  </div>
</div>