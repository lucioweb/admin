<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<div class="container my-2">
  <h1>Pet Top Store - Relatório de vendas</h1>
  <a href="/">Voltar</a>
</div>

<div class="container mx-auto p-2"></div>
<div class="container my-3 py-5" style="width: 50%;">


  <% for (const sale of sales) { %>
  <div class="container ps-3" style="border: 1px solid gray; margin-bottom: 10px">
    <% if (sale.employee_id) { %>Funcionário que realizou a venda: <%= sale.employee.name %><br /> <% } %>
    <% if (sale.client_id) { %>Cliente: <%= sale.client.name %><br /> <% } %>
    Itens da venda:
    <ol>
      <% for (const item of sale.items) { %>
      <li> Produto Cod <%= item.product.id %> - <%= item.product.name %> R$ <%= item.product.price %></li>

      <% } %>
    </ol>
  </div>
  <% } %>

</div>
</div>